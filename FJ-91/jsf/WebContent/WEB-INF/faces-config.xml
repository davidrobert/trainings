<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
	version="1.2">
	<managed-bean>
		<managed-bean-name>produtoHandler</managed-bean-name>
		<managed-bean-class>
			br.com.caelum.jsf.bean.ProdutoHandler
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>formulario</display-name>
		<from-view-id>/formulario.jsp</from-view-id>
		<navigation-case>
			<from-outcome>ok</from-outcome>
			<to-view-id>/lista.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>lista</display-name>
		<from-view-id>/lista.jsp</from-view-id>
		<navigation-case>
			<from-outcome>ok</from-outcome>
			<to-view-id>/formulario.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
